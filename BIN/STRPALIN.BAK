#include<iostream.h>
#include<conio.h>
#include<string.h>
int expandFromCentre(char s[],int i,int j)
{
 while(i>0 && j<strlen(s) && s[i]==s[j])
 {
  i--;
  j++;
 }
 return j-i-1;
}
void fun(char str[])
{
 int i,start=0,end=0;
 for(i=0;i<strlen(str);i++)
 {
  int len1 = expandFromCentre(str,i,i+1);
  int len2= expandFromCentre(str,i,i);
  int len;
  if(len1>len2)
  len=len1;
  else
  len=len2;
  if(end-start<len)
  {
   start=i-len/2;;
   end=i+len/2;
  }
 }
 for(i=start;i<end-1;i++)
 {
  cout<<str[i];
 }
}
main()
{
 fun("baab");
}


