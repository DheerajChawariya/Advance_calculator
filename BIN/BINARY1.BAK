/*WAP binary- operator overloading between object and integer value*/
#include<iostream.h>
#include<conio.h>
class demo
{
 public:
 int a,b;
 demo()
 {
  a=0;
  b=0;
 }
 demo(int a,int b)
 {
 this->a=a;
 this->b=b;
 }
 void display(char *s)
 {
  cout<<s<<"a="<<a<<"\tb="<<b<<endl;
 }
 void operator-(int n);
};
void demo::operator-(int n)
{
a=a-n;
b=b-n;
}
void main()
{
 clrscr();
 demo o(7,8);
 cout<<"before binary- operator overloading\n";
 o.display("object o=\n");
 o-3; //compiler treat like a o.operator-(3);
 cout<<"After binary- operator overloading\n";
 o.display("object o=\n");
}
